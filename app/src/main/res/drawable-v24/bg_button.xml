<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="10dip" />

            <stroke android:width="1dip" android:color="@color/teal_green_hover"/>

            <gradient android:angle="-90" android:endColor="@color/teal_green_hover" android:startColor="@color/teal_green_hover" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="10dip" />

            <stroke android:width="1dip" android:color="@color/teal_green_hover" />

            <solid android:color="@color/teal_green_hover" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="10dip" />

            <stroke android:width="1dip" android:color="@color/teal_green" />

            <solid android:color="@color/teal_green" />
        </shape>
    </item>

</selector>